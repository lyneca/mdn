#!/bin/bash

function mk_note_dir {
    if [ ! -d "$HOME/.mdn" ] ; then
        echo ":: Creating $HOME/.mdn..."
        mkdir "$HOME/.mdn"
    fi
}

function del {
    echo ":: Delete note \"$1\"? (yn)"
    echo -n "> "
    read yn
    if [ $yn = "y" ]; then
        rm "$HOME/.mdn/$1.md"
    fi
}

function list {
    echo ":: Notes:"
    for file in $(ls $HOME/.mdn/*.md); do
        echo "  - $(echo $file | rev | cut -f 2- -d '.' | cut -f 1 -d '/' | rev)"
    done
}

function edit {
    if [ -z "$1" ]; then
        echo ":: Specify a note name"
    else
        nvim "$HOME/.mdn/$1.md"
    fi
}

function link {
    ln -s "$HOME/.mdn/$1.md" "./$1.md"
    echo ":: Linked to $(pwd)/$1.md"
}

function pdf {
    pandoc \
        --katex \
        --self-contained \
        --from=markdown+tex_math_dollars+emoji \
        -t html \
        --css "$MDN_CSS_FILE" \
        -o "${1%.*}.pdf" \
        "$HOME/.mdn/${1%.*}.md"
}

mk_note_dir

getopts dlpn opt
case $opt in
    d) del $2 ;;
    l) list ;;
    n) link $2 ;;
    p) pdf $2 ;;
    *) edit $1 ;;
esac
